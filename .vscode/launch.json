{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "logging": {
                "engineLogging": true,
                "programOutput": true,
                "exceptions": true,
                "moduleLoad": true,
                "trace": true,
                "traceResponse": true
            },
            "serverLaunchTimeout": 5000,
            "filterStderr": true,
            "filterStdout": false,
            "serverStarted": "stm32f1x.cpu",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": true,
            "program": "${workspaceRoot}/build/Template.elf",
            "setupCommands": [
                { "text": "file ${workspaceRoot}/build/Template.elf", "description": "load file", "ignoreFailures": false},
                { "text": "set remote hardware-breakpoint-limit 6", "ignoreFailures": false },
                { "text": "set remote hardware-watchpoint-limit 4", "ignoreFailures": false }  
            ],
            "osx": {
                "MIMode": "gdb",
                "MIDebuggerPath": "/usr/local/Cellar/gcc-arm-none-eabi/20171218/bin/arm-none-eabi-gdb",
                "MIDebuggerServerAddress": "localhost:3333",
                //"preLaunchTask": "flash",
                "debugServerPath": "/usr/local/Cellar/open-ocd/0.10.0/bin/openocd",
                "debugServerArgs": "-f ${workspaceRoot}/openocd.cfg ",
             },
        }
    ]
}